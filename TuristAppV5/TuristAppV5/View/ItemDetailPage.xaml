            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="287*"/>
                <ColumnDefinition Width="338*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="150*"/>
                <RowDefinition Height="150*"/>
            </Grid.RowDefinitions>
            <Image HorizontalAlignment="Left" Height="284" Margin="10,10,0,0" VerticalAlignment="Top" Width="318" Grid.Column="1"/>
            <ListView HorizontalAlignment="Left" Height="284" Margin="10,10,0,0" VerticalAlignment="Top" Width="267"/>
            <bm:Map ZoomLevel="13" Credentials="AhVIFAhaFsdkLTO5W_zBuQRA29ly0ZMwfR1mx_jqnW2QVYH4WQEmtWayB25cA7Aq" Margin="0,0,10,-14" Grid.Row="1" Culture="da" Grid.ColumnSpan="2" >
                <bm:Map.Center>
                    <bm:Location Latitude="55.641910" Longitude="12.087845" />
                </bm:Map.Center>

                <bm:Pushpin>
                    <bm:MapLayer.Position>
                        <bm:Location Latitude="{Binding SelectedRestaurant.Breddegrad}" Longitude="{Binding SelectedRestaurant.Laengdegrad}"  />
