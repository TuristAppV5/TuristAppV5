<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TuristAppV5"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Maps="using:Bing.Maps"
    xmlns:Viewmodel="using:TuristAppV5.Viewmodel"
    x:Class="TuristAppV5.MainPage"
    mc:Ignorable="d">
    <Page.BottomAppBar>
        <CommandBar>
            <CommandBar.PrimaryCommands>
                <AppBarButton Icon="View" Label="Vælg"/>
            </CommandBar.PrimaryCommands>
        </CommandBar>
    </Page.BottomAppBar>
    <Page.DataContext>
        <Viewmodel:MainViewmodel/>
    </Page.DataContext>
    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="ms-appx:///Assets/bg.jpg"/>
        </Grid.Background>
        <Grid HorizontalAlignment="Left" Height="750" Margin="10,10,0,0" VerticalAlignment="Top" Width="900">
            <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" FontSize="70" TextWrapping="Wrap" Text="#VisitRoskilde" VerticalAlignment="Top" Foreground="White"/>
            <GridView Margin="10,125,0,0" VerticalAlignment="Top" Foreground="White" Height="150" ItemsSource="{Binding KategoriCollection}" SelectedItem="{Binding SelectedKategori, Mode=TwoWay}">
                <GridView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Vertical" Margin="20,0">
                            <Image Height="100" Width="100" Source="http://ggp.dk/visit/SeeOrange_rgb.png"/>
                            <TextBlock Text="{Binding Kategorinavn}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16"/>
                        </StackPanel>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>
            <GridView Margin="10,320,0,0" ItemsSource="{Binding SelectedKategori.Kategoriliste}" SelectedItem="{Binding SelectedKategoriliste, Mode=TwoWay}">
                <GridView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <Image Height="100" Width="100" Source="http://ggp.dk/visit/SeeOrange_rgb.png"/>
                            <TextBlock Text="{Binding Navn}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18"/>
                        </StackPanel>
                    </DataTemplate>
                </GridView.ItemTemplate>
                
            </GridView>
        </Grid>
        <Grid HorizontalAlignment="Left" Height="748" Margin="915,10,0,0" VerticalAlignment="Top" Width="441">
            <TextBlock FontSize="50" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Facebook Feed" VerticalAlignment="Top" RenderTransformOrigin="0.518,1.25" Width="421"/>
        </Grid>
    </Grid>
</Page>
